@using EventMenegmentSL.ViewModel
@model EventViewModel

@{
    ViewData["Title"] = "Tədbir Detalları";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<div class="container d-flex justify-content-center align-items-center min-vh-100 fade-in">
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden p-0 bg-card-custom text-light" style="max-width: 800px; width: 100%;">

        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="~/uploads/@Model.ImageUrl"
                 alt="@Model.Name"
                 class="w-100"
                 style="height: 300px; object-fit: cover;" />
        }

        <div class="card-body p-4">
            <h2 class="card-title text-center mb-4 fw-bold text-info">@Model.Name</h2>

            <div class="mb-3">
                <i class="fas fa-calendar-alt me-2 text-warning"></i>
                <strong class="text-white-50">Tarix:</strong> @Model.Date.ToString("dd MMM yyyy")
            </div>

            <div class="mb-3">
                <i class="fas fa-map-marker-alt me-2 text-warning"></i>
                <strong class="text-white-50">Məkan:</strong> @Model.Location.Name
            </div>

            <div class="mb-3">
                <i class="fas fa-tag me-2 text-warning"></i>
                <strong class="text-white-50">Növ:</strong> @Model.EventType?.Name
            </div>

            <div class="mb-3">
                <i class="fas fa-align-left me-2 text-warning"></i>
                <strong class="text-white-50">Təsvir:</strong>
                <p class="mt-2">@Model.Description</p>
            </div>
        </div>
    </div>
</div>

<!-- Go Back button under card -->
<div class="text-center mt-4">
    <a asp-controller="Events" asp-action="Index" class="btn btn-outline-light px-4 py-2">
        <i class="fas fa-arrow-left me-2"></i> Geri Qayıt
    </a>
</div>

<style>
    body {
        background-color: #0d0d0d; /* Tam tünd arxa fon */
    }

    .fade-in {
        animation: fadeIn 0.8s ease-in-out;
    }

    keyframes fadeIn {
        0%

    {
        opacity: 0;
        transform: scale(0.95);
    }

    100% {
        opacity: 1;
        transform: scale(1);
    }

    }

    .bg-card-custom {
        background-color: #1a1a1a; /* Card üçün tünd boz */
    }

    .btn-outline-light:hover {
        background-color: #ffffff;
        color: #000000;
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
