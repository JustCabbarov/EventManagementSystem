@using EventMenegmentUI.Models
@model SignInViewModel

@{
    ViewData["Title"] = "Sign In";
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="d-flex justify-content-center align-items-center vh-100"
     style="background: linear-gradient(rgba(2,6,23,0.9), rgba(2,6,23,0.9)),
            url('https://images.unsplash.com/photo-1504384308090-c894fdcc538d?auto=format&fit=crop&w=1470&q=80');
            background-size: cover;
            background-position: center;">

    <div class="p-4 bg-dark bg-opacity-75 rounded-4 shadow-lg" style="max-width: 500px; width: 100%;">

        <h2 class="text-center mb-4 fw-bold text-light">SIGN IN</h2>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <form asp-action="SignIn" method="post" novalidate>

            <div class="mb-3">
                <input asp-for="Email" class="form-control border-2" placeholder="EMAIL *" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <input asp-for="Password" type="password" class="form-control border-2" placeholder="PASSWORD *" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="form-check mb-4">
                <input asp-for="RememberMe" class="form-check-input" id="rememberMeCheck">
                <label asp-for="RememberMe" class="form-check-label text-light" for="rememberMeCheck">
                    REMEMBER ME
                </label>
            </div>

            <button type="submit" class="btn btn-primary w-100 py-2 fw-bold text-uppercase">Sign In</button>
        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
