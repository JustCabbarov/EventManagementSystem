@using EventMenegmentUI.Models
@model HomeViewModel

    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">

<body class="bg-dark text-light" style="font-family: 'Poppins', sans-serif;">

 

    <!-- Hero Section -->
    <section style=" background-image: url(' @Url.Content("~/images/Backgroun.jpg")'); background-size: cover; background-position: center;height:600px" class="position-relative overflow-hidden" style="height: 100vh; min-height: 700px; ">

        <!-- Gradient Overlay -->
        <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-75"></div>

        <!-- Content -->
        <div class="container h-100 d-flex align-items-center position-relative" style="z-index: 2;">
            <div class="row justify-content-center text-center w-100">
                <div class="col-lg-10">
                    <!-- Badge -->
                    <div class="d-inline-flex align-items-center bg-primary bg-opacity-25 border border-primary border-opacity-50 rounded-pill px-4 py-2 mb-4">
                        <span class="bg-primary rounded-circle me-2" style="width: 8px; height: 8px;"></span>
                        <small class="text-primary fw-semibold">Yeni Təcrübə</small>
                    </div>

                    <!-- Main Title -->
                    <h1 class="display-1 fw-bold mb-4 text-white" style="font-family: 'Montserrat', sans-serif; line-height: 1.1;">
                        EventX-ə xoş gəlmisiniz!
                    </h1>

                    <!-- Subtitle -->
                    <p class="fs-4 text-light mb-5 mx-auto" style="max-width: 700px;">
                        Seminar, Bootcamp və Masterclass-lar - Peşəkar inkişafınız üçün ən yaxşı tədbirlər
                    </p>

                    <!-- CTA Buttons -->
                    <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center">
                        <a asp-controller="Events" asp-action="index" class="btn btn-warning btn-lg fw-semibold px-5 py-3 rounded-pill text-dark">
                            Tədbirlərə bax
                            <i class="fas fa-arrow-right ms-2"></i>
                        </a>
                        <a asp-controller="Account" asp-action="SignUp" class="btn btn-outline-light btn-lg fw-semibold px-5 py-3 rounded-pill">
                            Qeydiyyatdan keç
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Decorative Elements -->
        <div class="position-absolute top-0 end-0 w-25 h-25 bg-primary bg-opacity-10 rounded-circle" style="transform: translate(50%, -50%);"></div>
        <div class="position-absolute bottom-0 start-0 w-25 h-25 bg-warning bg-opacity-10 rounded-circle" style="transform: translate(-50%, 50%);"></div>
    </section>

    <!-- Events Section -->
    <section class="py-5 bg-dark">
        <div class="container py-5">
            <!-- Section Header -->
            <div class="text-center mb-5">
                <h2 class="display-4 fw-bold text-primary mb-3" style="font-family: 'Montserrat', sans-serif;">
                    Tədbirlərimiz
                </h2>
                <div class="bg-primary mx-auto rounded-pill mb-4" style="width: 80px; height: 4px;"></div>
                <p class="fs-5  mx-auto" style="max-width: 600px;">
                    İxtisaslaşmış təlimlər və peşəkar inkişaf üçün nəzərdə tutulmuş tədbirlər
                </p>
            </div>

            <div class="row g-4 mb-4">
                @foreach (var evt in Model.Events)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="card bg-secondary bg-opacity-25 border-secondary border-opacity-50 h-100 rounded-4 shadow-lg overflow-hidden">
                            <div class="position-relative">
                                <img src="~/Uploads/@evt.ImageUrl"
                                     class="card-img-top" style="height: 220px; object-fit: cover;" alt="Seminar">
                                <div class="position-absolute top-3 end-3">
                                    <span class="badge bg-warning text-dark fw-semibold px-3 py-2 rounded-pill">Yeni</span>
                                </div>
                            </div>
                            <div class="card-body p-4">
                                <div class="d-inline-block bg-primary text-white px-3 py-1 rounded-pill small fw-semibold mb-3">
                                    @evt.Date.ToString("dd MMMM yyyy")
                                </div>
                                <h3 class="card-title h4 text-white fw-bold mb-3">@evt.Name</h3>
                                <p class="card-text text-light-emphasis mb-4">
                                    @evt.Description
                                </p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="text-muted small">
                                        <i class="fas fa-map-marker-alt me-2 text-primary"></i>
                                        @evt.Location.Name
                                    </span>
                                    <a href="#" class="btn btn-primary btn-sm fw-semibold px-4 rounded-pill">Ətraflı</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>


         
    </section>

    <!-- Categories Section -->
    <section class="py-5" style="background: linear-gradient(135deg, #0f172a, #1e293b);">
        <div class="container py-5">
            <!-- Section Header -->
            <div class="text-center mb-5">
