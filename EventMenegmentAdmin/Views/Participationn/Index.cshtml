@using EventMenegmentSL.ViewModel
@model List<ParticipationViewModel>
@if (Model == null || !Model.Any())
{
    <p style="text-align:center; font-weight:bold; color:#555; font-size:40px">Heç bir bilet yoxdur.</p>
}
else
{
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <div class="container py-4">
            <div class="row row-cols-1 row-cols-md-3 g-4">
      @foreach (var item in Model)
      {
        <!-- Bootstrap CSS -->

              
                
                    <div class="col">
                        <div class="card h-100 border rounded-3 shadow-sm">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title text-center text-primary">Tədbir Bileti</h5>
                                <hr />
                                <p><strong>Tədbirin Adı:</strong> @(item.Invitation?.Event?.Name ?? "Bilinmir")</p>
                                <p><strong>Məkan:</strong> @(item.LocationName)</p>
                                <p><strong>Yoxlanış Vaxtı:</strong> @(item.CheckInTime.ToString("dd.MM.yyyy HH:mm"))</p>
                                <p><strong>Oturacaq Nömrəsi:</strong> @(item.SeatNumber)</p>
                               
                            </div>
                        </div>
                    </div>
                
      }
            </div>
        </div>

      
}