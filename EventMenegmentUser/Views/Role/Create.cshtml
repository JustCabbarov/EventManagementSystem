@using EventMenegmentAdmin.Models



@model RoleViewModel

<div class="container mt-5">
    <link rel="stylesheet" href="~/css/style.css" />

    <div class="card shadow-lg p-4">
        <h2 class="card-title text-center mb-4">Create New Event</h2>

        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter event name" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="d-grid gap-2 mt-4">
                <button type="submit" class="btn btn-primary btn-lg">Create Event</button>
            </div>
        </form>
    </div>
</div>
