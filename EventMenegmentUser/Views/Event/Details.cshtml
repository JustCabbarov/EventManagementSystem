@using EventMenegmentAdmin.DTO
@model EventDTO

@{
    ViewData["Title"] = "Detail";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Event Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Optional: Add some custom styling for better image handling */
        .event-image {
            max-width: 250px; /* Adjust as needed */
            height: auto;
            border-radius: 8px; /* Slightly rounded corners for the image */
            box-shadow: 0 4px 8px rgba(0,0,0,0.1); /* Subtle shadow for depth */
        }
    </style>
</head>
<body class="bg-light">

    <div class="container py-5">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header bg-primary text-white text-center py-3 rounded-top-3">
                <h3 class="mb-0">Event Details</h3>
            </div>

            <div class="card-body p-4">
                <div class="row g-4">
                    <div class="col-md-5 d-flex justify-content-center align-items-center">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="~/uploads/@Model.ImageUrl" class="img-fluid event-image" alt="@Model.Name" />
                        }
                        else
                        {
                            <p class="text-muted">No image available</p>
                        }
                    </div>
                    <div class="col-md-7">
                        <dl class="row mb-0">
                            <dt class="col-sm-4 text-muted">Event Name</dt>
                            <dd class="col-sm-8 fw-bold">@Model.Name</dd>

                            <dt class="col-sm-4 text-muted">Description</dt>
                            <dd class="col-sm-8">@Model.Description</dd>

                            <dt class="col-sm-4 text-muted">Date & Time</dt>
                            <dd class="col-sm-8">@Model.Date.ToString("g")</dd> 

                            <dt class="col-sm-4 text-muted">Event Type</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-info text-dark p-2">@Model.EventType.Name</span>
                            </dd>

                            <dt class="col-sm-4 text-muted">Location</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-secondary p-2">@Model.Location.Name</span>
                            </dd>

                            <dt class="col-sm-4 text-muted">Organizer</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-warning text-dark p-2">@Model.Organizer.Name</span>
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>

            <div class="card-footer bg-light border-top text-end py-3">
                <a asp-action="Index" class="btn btn-outline-secondary px-4">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
</body>
</html>